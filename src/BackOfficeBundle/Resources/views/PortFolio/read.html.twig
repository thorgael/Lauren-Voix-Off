{% extends "::admin.html.twig" %}

{% block page_heading %}
<!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion des contenus
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{path('bo_homepage')}}">Accueil</a>
                </li>
                <li>
                    <i class="fa fa-th-large"></i> <a href="{{path('admin_portfolio_list')}}">Mon portfolio</a>
                </li>
                <li class="active">
                    <i class="fa fa-suitcase"></i> Mon projet
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block body %}
  	<div class="row">
    	<div class="col-md-10 col-md-offset-1 toppad" >
      		<div class="panel panel-info">
        		<div class="panel-heading">
          			<h3 class="panel-title">{{portfolio.title}}</h3>
        		</div>
        		<div class="panel-body">
          			<div class="row">
            			<div class="col-md-3 col-lg-3" align="center">
            				{% if portfolio.image %}
            					<img alt="{{ portfolio.image.alt }}" src="{{ asset('uploads/' ~ portfolio.image.url ~ '/' ~ portfolio.image.id ~ '.' ~ portfolio.image.extension) }}" class="img-responsive">
            				{% endif %}
            			</div>
        				<div class=" col-md-9 col-lg-9 "> 
          					{{ portfolio.descript|raw }}
        				</div>
      				</div>
      				<hr>
          			<div class="row">
          				<div class="col-md-10 col-md-offset-1">
          					{{ portfolio.sound|raw }}
          				</div>
          			</div>
    			</div>
         		<div class="panel-footer">
                	<a href="{{ path('admin_portfolio_update',{id: portfolio.id}) }}" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                	<span class="pull-right">
                		<a href="{{path('admin_portfolio_delete',{id: portfolio.id})}}" data-original-title="Remove this portfolio" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger btn-delete-portfolio" data-toggle="confirmation" data-title="Etes-vous sure ?" data-placement="top" data-path="{{path('admin_portfolio_delete',{id: portfolio.id})}}"><i class="glyphicon glyphicon-remove"></i></a>
                	</span>
            	</div>
  			</div>
		</div>
	</div>
{% endblock %}
