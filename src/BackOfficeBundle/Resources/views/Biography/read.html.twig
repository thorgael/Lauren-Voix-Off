{% extends "::admin.html.twig" %}

{% block page_heading %}
<!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion des contenus
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{path('bo_homepage')}}">Accueil</a>
                </li>
                <li class="active">
                    <i class="fa fa-star"></i> Ma biographie
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block body %}
  	<div class="row">
    	<div class="col-md-10 col-md-offset-1" >
      		<div class="panel panel-info">
        		<div class="panel-heading">
          			<h3 class="panel-title">{{biography.title}}</h3>
        		</div>
        		<div class="panel-body">
          			<div class="row">
            			<div class="col-md-3 col-lg-3" align="center">
            				{% if biography.image %}
            					<img alt="{{ biography.image.alt }}" src="{{ asset('uploads/' ~ biography.image.url ~ '/' ~ biography.image.id ~ '.' ~ biography.image.extension) }}" class="img-circle img-responsive">
            				{% endif %}
            			</div>
        				<div class="col-md-9 col-lg-9"> 
          					{{ biography.content|raw }}
        				</div>
      				</div>
    			</div>
         		<div class="panel-footer">
                	<a href="{{ path('admin_biography_update',{id: biography.id}) }}" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                	<span class="pull-right">
                	</span>
            	</div>
  			</div>
		</div>
		</div>
{% endblock %}
