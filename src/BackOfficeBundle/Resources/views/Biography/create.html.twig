{% extends "::admin.html.twig" %}

{% block page_heading %}
<!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Gestion des contenus
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{path('bo_homepage')}}">Accueil</a>
                </li>
                <li>
                    <i class="fa fa-star"></i> <a href="{{path('admin_biography_read')}}">Ma biographie</a>
                </li>
                <li class="active">
                    <i class="fa fa-pencil"></i> Edition de ma biographie
                </li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1 main tabmodif">
			<div class="panel panel-default">
	            <div class="panel-heading">
	                <h3 class="panel-title"><i class="fa fa-check-square-o"></i> Formulaire</h3>
	            </div>
				{{form_start(form)}}

					{{ form_errors(form) }}

				    	<div class="form-group">
				      		<label>
				      			{{ form_label(form.title) }}
				      		</label>
				        		{{ form_widget(form.title) }}
				      		<p class="help-block">
				      			{{ form_errors(form.title) }}
				      		</p>
					    </div>
					    <div class="form-group">
				      		<label>
				      			{{ form_label(form.image) }}
				      		</label>
				        		{{ form_widget(form.image) }}
				      		<p class="help-block">
				      			{{ form_errors(form.image) }}
				      		</p>
					    </div>
					    <div class="form-group">
				      		<label>
				      			{{ form_label(form.content) }}
				      		</label>
				        		{{ form_widget(form.content) }}
				      		<p class="help-block">
				      			{{ form_errors(form.content) }}
				      		</p>
					    </div>
					{{ form_widget(form.save) }}
				{{form_end(form)}}
			</div>
		</div>
    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script>
		tinymce.init({
		  selector: 'textarea',
		  height: 350,
		  plugins: [
		    'advlist autolink lists link image charmap print preview anchor',
		    'searchreplace visualblocks code fullscreen',
		    'insertdatetime media table contextmenu paste code'
		  ],
		  toolbar: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
		  content_css: '//www.tinymce.com/css/codepen.min.css'
		});
	</script>

{% endblock %}