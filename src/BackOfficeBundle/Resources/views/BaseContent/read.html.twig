{% extends "::admin.html.twig" %}

{% block page_heading %}
<!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Contenu de base
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="{{path('bo_homepage')}}">Accueil</a>
                </li>
                <li>
                    <i class="fa fa-hand-o-down"></i> <a href="{{ path('admin_base_list') }}">Contenu de base du site</a>
                </li>
                <li class="active">
                    <i class="fa fa-align-left"></i> Mon contenu
