<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description.content }}">
    <meta name="author" content="Dujardin GaÃ«l, Lionel Oravec">

    <title>{{ title.title }}</title>


    {% block stylesheets %}

    <!-- Bootstrap Core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="{{ asset('css/freelancer.min.css')}}" rel="stylesheet">
    <link href="{{ asset('css/style.css')}}" rel="stylesheet"> <!-- feuille de style -->
    <link href="{{ asset('fonts/font-awesome.min.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% endblock %}

</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#page-top"></a>
                <!-- logo -->
                <div style="width: 200px; height: 150px;">
                    <img style="height: 100%;" src="{% if logo.image %}{{ asset('uploads/' ~ logo.image.url ~ '/' ~ logo.image.id ~ '.' ~ logo.image.extension)}}{% endif %}" class="img-responsive" alt="{% if logo.image %}{{ logo.image.alt }}{% endif %}">
                </div>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="#portfolio">Portfolio</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#about">About</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            {{dump(biography)}}
            <div class="row">
                <div class="col-lg-12">
                    {% if biography.image %}
                        <img class="img-responsive" alt="{{ biography.image.alt }}" src="{{ asset('uploads/' ~ biography.image.url ~ '/' ~ biography.image.id ~ '.' ~ biography.image.extension) }}">
                    {% endif %}
                    <div class="intro-text">
                        <span class="name">{{ biography.title }}</span>
                        <hr class="star-light">
                        <span class="skills">{{ biography.content|raw }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    {% block body %}{% endblock %} <!-- ici s'inclue le contenu de la page src/appBundle/Ressources/views/Default/index-->

         <!-- Footer -->
    <footer class="text-center">
        {{dump(footerLeft)}}
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>{{ footerLeft.title }}</h3>
                        <p>{{ footerLeft.content|raw }}</p>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Autour du web</h3>
                        <ul class="list-inline">
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-dribbble"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>{{ footerRight.title }}</h3>
                        <p>{{ footerRight.content|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; Your Website 2016
                    </div>
                </div>
            </div>
        </div>
    </footer>

        {% block javascripts %}{% endblock %}
</body>
</html>
